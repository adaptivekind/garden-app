{
  "name": "garden-app",
  "version": "0.0.1",
  "description": "Electron app that runs garden -p 8888 and embeds a browser for localhost:8888",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "dev": "npm run compile && electron . --dev",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "build": "npm run compile",
    "build:mac": "npm run compile && electron-builder --mac",
    "build:mac-no-dmg": "npm run build:mac -- --publish=never --mac dir",
    "dist": "npm run compile && electron-builder --publish=never",
    "prepare": "husky",
    "eslint": "eslint src --ext .ts",
    "eslint:fix": "eslint --fix src --ext .ts",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "lint": "npm run prettier && npm run eslint",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix"
  },
  "keywords": [
    "electron",
    "garden"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-sonarjs": "^3.0.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "canvas": "^3.1.2"
  },
  "build": {
    "appId": "com.garden.app",
    "productName": "Garden",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "loading.html",
      "error.html",
      "menu-icon.png",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Garden App",
      "icon": "icon.png"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
