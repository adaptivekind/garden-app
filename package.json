{
  "name": "garden-app",
  "version": "0.0.1",
  "description": "Electron app that runs garden -p 8888 and embeds a browser for localhost:8888",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "dev": "npm run compile && electron . --dev",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "build": "npm run compile && electron-builder",
    "build:mac": "npm run compile && electron-builder --mac",
    "build:mac-no-dmg": "npm run build:mac -- --publish=never --mac dir",
    "dist": "npm run compile && electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "garden"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "canvas": "^3.1.2"
  },
  "build": {
    "appId": "com.garden.app",
    "productName": "Garden",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "loading.html",
      "error.html",
      "menu-icon.png",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Garden App",
      "icon": "icon.png"
    }
  }
}
